{
    "name": "nucleos-api",
    "version": "1.0.0",
    "description": "Backend para manejo de guilds en World of Warcraft usando NestJS, Prisma, PostgreSQL y Clean Architecture",
    "main": "dist/main.js",
    "scripts": {
        "start:dev": "dotenv -e .env.development -- nest start --watch",
        "start:prod": "dotenv -e .env.production -- node dist/main.js",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:push": "prisma db push"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@prisma/client": "^4.14.0",
        "dotenv": "^17.0.0",
        "passport": "^0.6.0",
        "passport-google-oauth20": "^2.0.0",
        "prisma": "^4.14.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "typescript": "^5.1.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.23",
        "@types/node": "^20.3.1",
        "@types/passport-google-oauth20": "^2.0.7",
        "dotenv-cli": "^8.0.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.1"
    }
}
